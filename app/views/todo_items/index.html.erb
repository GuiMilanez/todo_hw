<p id="notice"><%= notice %></p>

<div class="container">
<h1 class="jumbotron">Awesome Todo List</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table">
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description.titleize %></td>
        <td><button class="btn btn-outline-success btn-sm"><%= link_to 'Show', todo_item %></button></td>
        <td><button class="btn btn-outline-primary btn-sm"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></button></td>
        <td><button class="btn btn-outline-danger btn-sm"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-outline-primary"><%= link_to 'New Todo Item', new_todo_item_path %></button>
</div>